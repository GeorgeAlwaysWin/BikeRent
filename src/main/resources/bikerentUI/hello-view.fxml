<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="bikerentUI.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <TextField promptText="Login" fx:id="log">abc</TextField>
  <PasswordField promptText="Password" fx:id="pass">1234</PasswordField>
  <Label fx:id="errorText" style="-fx-text-fill: red"/>
  <Button text="Login" onAction="#onLoginButtonClick"/>
  <Button text="Register" onAction="#onRegButtonClick"/>
</VBox>
